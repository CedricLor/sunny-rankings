<% content_for(:title, t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions') ) %>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
      <div class="card-block shadowed-box text-center">
        <div class="main-title-block">
          <h1 class="main-title"><%= t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions') %></h1>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <div class="card-block shadowed-box text-center">
      <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :confirmation_token %>

        <div class="form-inputs">
          <%= f.input :login, required: true, autofocus: true %>
          <%= devise_error_messages! %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions') %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <div class="card-block shadowed-box text-center">
      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
</div>

<% content_for(:title, t('.forgot_your_password', :default => 'Forgot your password?')) %>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
      <div class="card-block shadowed-box text-center">
        <div class="main-title-block">
          <h1 class="main-title"><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h1>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <div class="card-block shadowed-box text-center">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :login, required: true, autofocus: true %>
            <%= devise_error_messages! %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, t('.send_me_reset_password_instructions', :default => "Send me reset password instructions") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <div class="card-block shadowed-box text-center">
      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
</div>

                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t :sign_out, default: "Sign out" %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path, method: :get do %>
                  <i class="fa fa-pencil-square-o"></i>  <%= t :update_connection_credentials, default: "Update your connexion credentials" %>
                <% end %>
              </li>
              <% if current_user.profile %>
                <li>
                  <%= link_to profile_path(current_user.profile), method: :get do %>
                    <i class="fa fa-list-alt"></i>  <%= t ".view_profile", default: "View your user profile" %>

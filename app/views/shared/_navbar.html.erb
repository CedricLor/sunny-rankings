        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">
        <%= image_tag "logo-skanher.png", class: "vertical-align-inline-block" %>
        <span class="brand-text vertical-align-inline-block"><span class='brandtext-first-part'>skan</span><span class='brandtext-second-part'>her</span></span>
      </a>

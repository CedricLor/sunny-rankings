<div class="search-form-card-block">
  <%= form_tag(firms_path, method: "get", class: "form-inline") do %>
    <div class="input-group input-group-search-form">
      <%= search_field(:requested_firm, :name, class: "form-control my-navbar-form-control", placeholder: t(".placeholder", default: "Look for a firm")) %>
      <span class="input-group-btn">
        <button type="submit" class="btn btn-default btn-search-form"><i class="fa fa-search"></i></button>
      </span>
    </div><!-- /input-group -->
  <% end %>
</div>

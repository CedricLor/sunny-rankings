<div id="searchFormWrapper">
  <%= form_tag(firms_path, :method => "get", class: "navbar-form form-inline my-navbar-form",  id: "navbarSearchForm") do %>
    <%= text_field_tag :search, params[:search], class: "form-control my-navbar-form-control", id: "navbarSearchInput", placeholder: "Look up for a firm" %>
    <button type="submit" class="btn btn-default" id="navbarSearchButton">
      <i class="fa fa-search"></i>
    </button>
  <% end %>
</div>

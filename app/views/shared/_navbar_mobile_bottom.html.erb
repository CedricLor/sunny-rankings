<div class="container visible-xs-* hidden-sm hidden-md hidden-lg">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="card-block shadowed-box">
        <!-- Do a new review -->
        <div class="row">
          <div col="col-xs-12">
            <%= button_to t(:top_call_to_action, default: "Rate a firm"), firms_path, method: :get, class: "btn btn-default btn-lg btn-block red-hover-btn", type: "button"%>
          </div>
        </div>

        <!-- if the user is signed in -->
        <% if user_signed_in? %>
          <div class="row">
            <div col="col-xs-12">
              <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-default btn-lg btn-block regular-btn", type: "button" do %>
                <i class="fa fa-sign-out"></i>  <%= t :sign_out, default: "Sign out" %>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div col="col-xs-12">
              <%= button_to edit_user_registration_path, method: :get, class: "btn btn-default btn-lg btn-block regular-btn", type: "button" do %>
                <!-- TO DO update t parameter -->
                <i class="fa fa-pencil-square-o"></i>  <%= t :update_connection_credentials, default: "Update your credentials" %>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div col="col-xs-12">
              <%= button_to pendingreviews_path, method: :get, class: "btn btn-default btn-lg btn-block regular-btn", type: "button" do %>
                <i class="fa fa-exclamation-triangle"></i><%= t :view_pending_review, default: "View pending reviews" %>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="row">
            <div col="col-xs-12">
              <%= button_to t(:sign_up, default: "Sign up"), new_user_registration_path, method: :get, class: "btn btn-default btn-lg btn-block", type: "button"%>
            </div>
          </div>
          <div class="row">
            <div col="col-xs-12">
              <%= button_to t(:sign_in, default: "Sign in"), new_user_session_path, method: :get, class: "btn btn-default btn-lg btn-block", type: "button"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

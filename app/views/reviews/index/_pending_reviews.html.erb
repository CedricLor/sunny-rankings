<div class="card-block shadowed-box">
  <div class="text-center">
    <h3>
      <%= t('.section_title', count: @pending_reviews.count, default: "Reviews pending your validation") %>
    </h3>
    <hr/>
  </div>
  <% @pending_reviews.each do | review | %>
    <%= render 'reviews/index/user_pending_review', review: review, displayed_reviews_css_array: @displayed_reviews_css_array %>
    <hr/>
  <% end %>
</div>

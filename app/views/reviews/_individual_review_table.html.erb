<table class="table table-striped table-responsive table-individual-review">
  <tr>
    <td>
      <%= t(".by", default: "By ") %><span class="username"><%= username.capitalize %></span>
      <%= t(".for_firm", default: " for ") %>
      <%= link_to(content_tag(:span, "#{firmname}", class: "firmname"), firm_path(firmid)) %>, <%= l(review.updated_at, format: :short) %>
    </td>
  </tr>
  <% unless review.title.blank? && review.comment.blank? %>
    <tr>
      <td>
        <div class="comment-title"><%= review.title %></div>
        <div class="comment-body"><%= review.comment %></div>
      </td>
    </tr>
  <% end %>
  <% review.answers.each do | answer | %>
    <tr>
      <td>
        <span class="indiv-review-test-question"><%= t( :short_question, scope: [:tests_questions, :"question_#{answer.test_id}"], default: answer.test.test_question ) %></span>
        <span class="indiv-review-user-rating <%= displayed_reviews_css_array[answer.user_rating - 1] %>"><%= answer.user_rating %></span>
      </td>
    </tr>
  <% end %>
</table>

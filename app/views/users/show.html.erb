<% content_for(:title, "Your user profile") %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <h3 class="text-center">Your user profile</h3>
      <div class="card-block shadowed-box">
        <table class="table table-striped table-responsive">
          <tr>
            <td>
              Your username:
            </td>
            <td id="fakeUsername">
              <%= "#{@user.email}" %>
            </td>
          </tr>
          <tr>
            <td>
              Your temporary password:
            </td>
            <td id="fakePassword">
              <%= "#{@user.password}" %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

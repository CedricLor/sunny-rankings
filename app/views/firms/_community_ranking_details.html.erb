<div class="row">
  <div class="col-xs-12">
    <div id="communityRankingDetails" class="text-wrapper card-block shadowed-box">
      <h4>What our users say about <%= "#{@firm.name}" %>:</h4>
      <table class="table table-striped table-responsive">
        <% avg_ratings_by_test = @firm.avg_ratings_by_test %>
        <% for i in 1..5 do %>
          <tr>
            <td>
              <%= @tests.fetch(i - 1).test_question %>
            </td>
            <td>
              <span class="badge"><%= avg_ratings_by_test.fetch(i).to_f.round(1) %></span>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

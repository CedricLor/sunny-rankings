<div class="row">
  <div class="col-xs-12">
    <div id="communityRankingDetails" class="text-wrapper card-block shadowed-box">
      <h4><%= t(".what_our_users_say", firm_name: @firm.name, default: "What our users say about #{@firm.name}:") %></h4>
      <table class="table table-striped table-responsive">
        <% for i in 1..5 do %>
          <tr>
            <td>
              <%#= t( :short_question, scope: ["tests_questions.question_#{i}"], default: @tests.fetch(i - 1).test_question ) %>
            </td>
            <td>
              <span class="badge"><%= @avg_ratings_by_test.fetch(i).to_f.round(1) %></span>
            </td>
            <td>
              <span class="badge trend-badge">
                <% css_class_for_arrow = {up: "rotate-right-up", down: "rotate-right-down", neutral: "rotate-neutral"} %>
                <% arrow_direction = :neutral %>
                <% arrow_direction = :up if (@current_period_averages.fetch(i).to_f > @previous_period_averages.fetch(i).to_f) %>
                <% arrow_direction = :down if @current_period_averages.fetch(i).to_f < @previous_period_averages.fetch(i).to_f %>
                <i class="fa fa-long-arrow-up fa-lg <%= css_class_for_arrow[arrow_direction] %>"></i>
              </span>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

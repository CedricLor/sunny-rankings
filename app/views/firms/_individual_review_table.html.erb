<table class="table table-striped table-responsive table-individual-review">
  <tr>
    <td>
      <%= t(".by", default: "By") %><span class="username"><%= review.review_portfolio.user.username.capitalize %></span>, <%= l(review.updated_at, format: :short) %>
    </td>
  </tr>
  <% unless review.title.blank? && review.comment.blank? %>
    <tr>
      <td>
        <div class="comment-title"><%= review.title %></div>
        <span class="comment-body"><%= review.comment %></span>
      </td>
    </tr>
  <% end %>
  <% review.answers.each do | answer | %>
    <tr>
      <td>
        <span class="indiv-review-test-question"><%= t( :short_question, scope: [:tests_questions, :"question_#{answer.test_id}"], default: @tests.fetch(answer.test_id - 1).test_question ) %></span>
        <span class="indiv-review-user-rating <%= displayed_reviews_css_array[answer.user_rating - 1] %>"><%= answer.user_rating %></span>
      </td>
    </tr>
  <% end %>
</table>

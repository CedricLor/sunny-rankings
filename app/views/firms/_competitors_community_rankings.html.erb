<div class="row">
  <div class="col-xs-12">
    <div id="competitorsCommunityRankings" class="text-wrapper card-block shadowed-box">
      <h4>Community Rankings in the <%= selected_firm.industry %> industry in <%= selected_firm.country %></h4>
      <table class="table table-striped table-responsive">
      <% Firm.all.ranking_by_industry(selected_firm.industry).each do | firm | %>
        <tr>
          <td>
            <%= link_to(firm_path(firm)) do %>
              <%= image_tag(firm.icon_name, class: "company-index-icon") %>
            <% end %>
          </td>
          <td class="hidden-xs">
            <%= link_to firm.name, firm_path(firm) %>
          </td>
          <td>
            <span class="badge"><%= "#{firm.avg_rating.round(1)}" %></span>
          </td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
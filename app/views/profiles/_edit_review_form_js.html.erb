<script>
//<![CDATA[

// reloads the values of the review into the nice icons
$(window).load( function() {
  $(".rating-input").each( function () {
    if (!($(this).attr("value") == "")) {
      var i = parseInt($(this).attr("value")) + 1;
      var css_selector = ".rating-icons:nth-child(" + i + ")";
      $(this).next().children(css_selector).click();
    }
  });

});

//]]>
</script>
<% content_for(:title, "New Profile") %>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
      <div class="card-block shadowed-box text-center">
        <div class="main-title-block">
          <h1 class="main-title">Fill-in your Profile</h1>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
      <div class="card-block shadowed-box text-center">
        <!--
        TODO Review message depending on whether
        1. First time review after first time vote (@profile not validated)
        2. Review upon regular login if @profile not validated
        3. Review upon regular login if @profile already validated
        Probably need to create additional field in the profile table
        - first_time_review
        - validated already exist
        -->
        <% if @profile.first_time_login_upon_firm_review %>
          <p>An account with Sunny Ranking has been created for you!</p>
          <p class="red-paragraph">For confidentiality reasons, we have granted you the following username <%= "#{@user.email}" %></p>
          <p class="red-paragraph">To validate your review of <%= "#{@user.reviews.last.firm.name}" %>, please fill in your profile.</p>
        <% else %>
          <p>Please review your profile details below</p>
          <p class="red-paragraph">Your username is <%= "#{@user.email}" %></p>
          <% if @review.validated == false %>
            <p>You have one pending review for <%= "#{@user.reviews.last.firm.name}" %>. Please validate your review below.</p>
          <% else %>
            <p>You do not currently have any pending review.</p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <%= simple_form_for @profile, url: profile_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
        <div class="card-block shadowed-box text-center">
          <div>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :real_email, required: true, autofocus: true, label: "Your email" %>
              <%= f.input :first_name, required: true %>
              <%= f.input :last_name, required: true %>
              <%= f.input :country, required: true %>
              <%= f.input :phone_number, required: true %>
              <%= f.input :age %>
              <%= f.input :gender %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if @review.validated == true %>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
        <div class="card-block shadowed-box text-center">
          <div>
            <div>
              <div class="form-actions">
                <%= f.button :submit, "Validate" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% else %>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
        <div class="card-block shadowed-box text-center">
          <div>
            <div>
              <div class="text-center">
                <h1>Now please review your answers and validate</h1>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
        <div class="card-block shadowed-box text-center">
          <div>
            <div>
              <div class="form-inputs">

              <%= simple_fields_for @review do |r| %>
                <%= render "reviews/review_form_master_content", r: r %>
              <% end %>

              </div>
              <hr/>
              <div class="form-actions">
                <%= f.button :submit, "Validate" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %> <!-- end of the if condition (if review is validated else...) -->
  <% end %>
</div>



      <table class="table table-striped table-responsive">
      <%# Firm.all.ranking_by_industry(selected_firm.industry).each do | firm | %>
        <tr>
          <td>
            <%= t(".your_real_email", default: "Your real email") + ":" %>
          </td>
          <td>
            <%= @profile.real_email %>
          </td>
        </tr>
        <tr>
          <td>
            <%= t(".your_first_name", default: "Your first name") + ":" %>
          </td>
          <td>
            <%= @profile.first_name %>
          </td>
        </tr>
        <tr>
          <td>
            <%= t(".your_last_name", default: "Your last name") + ":" %>
          </td>
          <td>
            <%= @profile.last_name %>
          </td>
        </tr>
        <tr>
          <td>
            <%= t(".your_country_of_residence", default: "Your country of residence") + ":" %>
          </td>
          <td>
            <%= @profile.country %>
          </td>
        </tr>
        <tr>
          <td>
            <%= t(".your_phone_number", default: "Your phone number") + ":" %>
          </td>
          <td>
            <%= @profile.phone_number %>
          </td>
        </tr>
        <tr>
          <td>
            <%= t(".your_age", default: "Your age") + ":" %>
          </td>
          <td>
            <%= @profile.age %>
          </td>
        </tr>
        <tr>
          <td>
            <%= t(".your_gender", default: "Your gender") + ":" %>
          </td>
          <td>
            <%= @profile.gender %>
          </td>
        </tr>
      </table>

      </div>
    </div>
  </div>
